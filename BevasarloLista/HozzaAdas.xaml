<Window x:Class="BevasarloLista.HozzaAdas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BevasarloLista"
        mc:Ignorable="d"
        Title="Új termék" Height="300" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Termék" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <TextBox Grid.Row="0" x:Name="termekTextBox" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Width="200"/>
        <Label Grid.Row="1" Content="Mennyiség" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <TextBox Grid.Row="1" x:Name="mennyisegTextBox" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Width="200"/>
        <Label Grid.Row="2" Content="Egységár" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <TextBox Grid.Row="2" x:Name="egysegarTextBox" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Width="200"/>
        <Label Grid.Row="3" Content="Típusa" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <ComboBox Grid.Row="3" x:Name="tipusComboBox" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Width="200">
            <ComboBoxItem Content="A"/>
            <ComboBoxItem Content="B"/>
            <ComboBoxItem Content="C"/>
            <ComboBoxItem Content="D"/>
        </ComboBox>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" >
            <Button Grid.Row="4" Content="OK"   Width="100" Click="Ok_Click" Margin="5"/>
            <Button Grid.Row="4" Content="Mégse"   Width="100" Click="Megse_Click" Margin="5"/>            
        </StackPanel>

    </Grid>
</Window>
